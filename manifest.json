{
  "manifest_version": 3,
  "name": "Amplience Hotkeys",
  "version": "1.3",
  "description": "Add hotkeys for Amplience Dynamic Content",
  "permissions": ["storage"],
  "host_permissions": ["https://app.amplience.net/content*"],
  "content_scripts": [
    {
      "matches": ["https://app.amplience.net/content*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/amplience-hotkeys-16x16.png",
    "32": "icons/amplience-hotkeys-32x32.png",
    "96": "icons/amplience-hotkeys-96x96.png"
  }
}
